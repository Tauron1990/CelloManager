<UserControl x:Class="AssetManager.Views.ErrorView"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AssetManager.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
        <Grid RowDefinitions="*, Auto">
                <TextBlock Name="ErrorContent" HorizontalAlignment="Center"/>
                <Button Grid.Row="1" HorizontalAlignment="Right" Name="Exit">Schließen</Button>
        </Grid>
</UserControl>