<Window x:Class="Tauron.Application.CelloManager.UI.Views.MainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:hlp="http://schemas.Tauron-Hobby-Studio.org/xaml/presentation"
        xmlns:contracts="clr-namespace:Tauron.Application.CelloManager;assembly=Tauron.Application.CelloManager.Contracts"
        xmlns:local="clr-namespace:Tauron.Application.CelloManager.UI.Views.MainWindow.SpoolView"
        mc:Ignorable="d"
        d:DesignHeight="300" d:DesignWidth="300" hlp:DataContextServices.Activate="True"
        Background="{x:Static SystemColors.ControlBrush}" WindowState="Maximized"
        hlp:CompositionServices.ImportViewModel="{x:Static contracts:AppConststands.MainWindowName}"
        Icon="pack://siteoforigin:,,,/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Menu IsMainMenu="True" Margin="0,0,0,5">
            <MenuItem Header="{hlp:SimpleLocalize Name=LabelOptions}" hlp:CommandBinder.Command="Options:Options" />
        </Menu>
        <local:SpoolView Grid.Column="0" Grid.Row="1" Margin="5, 0" />
        <Button Grid.Column="0" Grid.Row="2" Content="{hlp:SimpleLocalize LabelMainWindowRefill}"
                HorizontalAlignment="Right" Margin="5" FontSize="20"
                hlp:CommandBinder.Command="Refill:Refill" />
    </Grid>
</Window>